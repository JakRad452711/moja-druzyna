@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<h1 class="text-center mb-2" style="margin-top: -16px;">@ViewData["Title"]</h1>
<div class="center">
    
        <section>
            <form id="account" method="post">
                <h4 >Zaloguj się używając danych logowania</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Hasło</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Zapamiętaj dane logowania
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Zaloguj</button>
                </div>
                <div class="form-group">
                    <p>
                        <!--<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>-->
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj nowe konto</a>
                    </p>
                    <p>
                        <!--<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>-->
                    </p>
                </div>
            </form>
        </section>
    </div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
