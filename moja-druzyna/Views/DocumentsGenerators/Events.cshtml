@model moja_druzyna.Models.Event

@{
	ViewData["Title"] = "wydarzenia";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/views/documents-generators/Orders.css" asp-append-version="true" />
<div class="text-center justify-content-center display-flex" style="min-width:650px">
	<form asp-action="events">
		<div class="list-item-width display-flex justify-content-center mb-32px">
			<div class="mr-8px mt-4px">
				<img src="~/icons/main/green/sticky note.svg" class="icon-size-32 mt-1px" />
			</div>
			<div class="font-dark-green header1-light">
				Wydarzenia
			</div>
		</div>
		<div class="list-item-width medium-light font-muddy-black mb-32px">
			@ViewBag.TeamName <br />
		</div>
		@if (ViewBag.UserRole == "captain")
		{
			<div class="display-flex justify-content-center">
				<div class="clear-white big-shadow size-fit-content medium-light display-block mb-32px">
					<div class="large-light mb-16px">
						dodaj wydarzenie
					</div>
					<div class="display-flex size-fit-content p-4px pl-8px pr-8px">
						<div class="form-group mr-4px">
							<label asp-for="Type" class="input-box-width text-left">rodzaj</label> <br />
							<input asp-for="Type" class="input-box-width" /><br />
							<span asp-validation-for="Type" class="input-box-width text-left text-danger"></span>
						</div>
						<br>
						<div class="form-group">
							<label asp-for="DateStartDateNotNullDateEnd" class="input-box-width text-left">data</label> <br />
							<input asp-for="DateStartDateNotNullDateEnd" class="input-box-width" /><br />
							<span asp-validation-for="DateStartDateNotNullDateEnd" class="input-box-width text-left text-danger"></span>
						</div>
						<br>
					</div>
					<div class="display-flex size-fit-content p-4px pl-8px pr-8px justify-content-center">
						<div class="form-group">
							<label asp-for="Description" class="input-box-width text-left">opis</label> <br />
							<input asp-for="Description" class="input-box-width" /><br />
							<span asp-validation-for="Description" class="input-box-width text-left text-danger"></span>
						</div>
					</div>
					<div class="display-flex p-8px justify-content-center width-100p">
						<button type="submit" class="round-corners-5px font-muddy-black button-padding">dodaj</button>
					</div>
				</div>
			</div>
		}

		<div class="display-flex list-item-width text-left medium-bold mb-4px">
            <div class="display-flex list-item-width justify-content-between ml-16px mr-8px">
                <span class="width-1a">ID wydarzenia</span>
                <span class="width-1b">rodzaj</span>
                <span class="width-1c text-left">data</span>
                <span class="width-1d">lista</span>
            </div>
        </div>

		@for (int i = 0; i<ViewBag.EventsList.Count; i++)
		{
			<div class="display-flex list-item-size clear-white small-shadow round-corners-12px large-light mb-4px">
				<div class="display-flex justify-content-between width100p text-left">
					<div class="width-1a ml-16px">
						<div class="mt-8px">@ViewBag.EventsList[i].IdEvent</div>
					</div>
					<div class="width-1b">
						<div class="mt-8px">@ViewBag.EventsList[i].Type</div>
					</div>
					<div class="width-1c">
						<div class="mt-8px">@ViewBag.EventsList[i].DateStartDateNotNullDateEnd.ToString("dd'.'MM'.'yyyy' 'HH':'mm")</div>
					</div>
					<div class="display-flex width-1d mt-8px mr-8px">
						<button id="manage-icon" name="eventId" value=@ViewBag.EventsList[i].IdEvent asp-action="AttendanceListForm" formmethod="get" class="no-border size-fit-content clear-white round-corners-5px">
							<img src="~/icons/managment/edit.svg" class="icon-size-24" />
						</button>
					</div>
				</div>
			</div>
		}
		<div style="height: 60px">
		</div>
	</form>
</div>