@model moja_druzyna.Models.Scout

@{
    ViewData["Title"] = "dane";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/views/profile/PersonalData.css" asp-append-version="true" />
<div id="content" class="text-center">
    <div id="header-box" class="large-regular font-dark-green">
        <div id="header-box-inside">
            
            <a id="go-back" class="nav-link text-dark" asp-controller="Team" asp-action="Team">
                <img src="~/icons/navigation/nav-left.svg" style="position:inherit; width: 40px; height: 40px; left: 0px; top: 0px; " />
            </a>

            <div id="header-box-inside-data">
                
                <div>
                    <img id="profile-picture" src="~/icons/design/profile picture.svg" />
                </div>
                <div id="team-name" class="paragraph-light">
                    @ViewBag.TeamName
                </div>
            </div>
            <div style="width:1px"><br /></div>
        </div>
        <form style="margin-top:-64px;margin-left:180px">
            <button asp-action="scoutachievements" class="mr-8px no-border round-corners-5px button-padding" formmethod="get">osiągnięcia</button>
        </form>
    </div>
    <div id="data-box-1" class="font-muddy-black">
        <div id="data-box-1a">
            <div id="labels" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular font-dark-green">
                        Dane<br />
                    </div>
                    <br />
                    Imię:<br />
                    Drugie imię:<br />
                    Nazwisko:<br />
                    Płeć:<br />
                    PESEL:<br />
                    Data urodzenia:<br />
                    Obywatelstwo:<br />
                    Numer członkowski:<br />
                </div>
            </div>
            <div id="data" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular">
                        <br />
                    </div>
                    <br />
                    @Html.DisplayFor(user => user.Name) <br />
                    @if (Model.SecondName == null)
                    {<a>n/a</a> }
                    else
                    { <a>@Model.SecondName</a>} <br />
                    @Html.DisplayFor(user => user.Surname) <br />
                    Płeć <br />
                    @Html.DisplayFor(user => user.PeselScout) <br />
                    @Html.DisplayFor(user => user.DateOfBirth) <br />
                    @Html.DisplayFor(user => user.Nationality) <br />
                    @Html.DisplayFor(user => user.MembershipNumber) <br />
                </div>
            </div>
        </div>
        <div id="data-box-1b">
            <div id="labels" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular font-dark-green">
                        Adres<br />
                    </div>
                    <br />
                    Ulica:<br />
                    Numer domu/bloku:<br />
                    Miasto:<br />
                    Kod pocztowy:<br />
                    Kraj:<br />
                </div>
            </div>
            <div id="data" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular">
                        <br />
                    </div>
                    <br />
                    @Html.ValueFor(user => user.Adress.StreetZam) <br />
                    @Html.ValueFor(user => user.Adress.NumberHouseZam) <br />
                    @Html.ValueFor(user => user.Adress.CityZam) <br />
                    @Html.ValueFor(user => user.Adress.ZipZam) <br />
                    @Html.ValueFor(user => user.Adress.CountryZam)<br>
                </div>
            </div>
        </div>
    </div>
    <div id="data-box-2" class="font-muddy-black">
        <div id="data-box-2a">
            <div id="labels" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular font-dark-green">
                        <br />
                    </div>
                    <br />
                    <br />
                    NS:<br />
                    Data wstąpienia do ZHP:<br />
                    Data odejścia z ZHP:<br />
                </div>
            </div>
            <div id="data" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular font-dark-green">
                        <br />
                    </div>
                    <br />
                    <br />
                    @Html.DisplayFor(user => user.Ns) <br />
                    @Html.DisplayFor(user => user.DateOfEntry) <br />
                    @if (Model.DateOfLeaving == null)
                    {<span>n/a</span>}
                    else { Html.DisplayFor(user => user.DateOfLeaving); } <br />
                </div>
            </div>
        </div>
        <div id="data-box-2b">
            <div id="labels" class="large-light font-muddy-black">
                <div style="width:160px">
                    <div class="paragraph-regular font-dark-green" style="width:300px">
                        Adres korespondencji<br />
                    </div>
                    <div style="width:300px;line-height:42px;">
                        <input type="checkbox" hidden/> <br />
                    </div>
                    Ulica:<br />
                    Numer domu/bloku:<br />
                    Miasto:<br />
                    Kod pocztowy:<br />
                    Kraj:<br />
                </div>
            </div>
            <div id="data" class="large-light font-muddy-black">
                <div>
                    <div class="paragraph-regular">
                        <br />
                    </div>
                    <div style="line-height:42px">
                        <br />
                    </div>
                    @Html.ValueFor(user => user.Adress.StreetKor) <br />
                    @Html.ValueFor(user => user.Adress.NumberHouseKor) <br />
                    @Html.ValueFor(user => user.Adress.CityKor) <br />
                    @Html.ValueFor(user => user.Adress.ZipKor) <br />
                    @Html.ValueFor(user => user.Adress.CountryKor)<br>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}