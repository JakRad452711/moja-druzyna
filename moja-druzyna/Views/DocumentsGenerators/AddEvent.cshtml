@model moja_druzyna.Models.Event

@{
    ViewData["Title"] = "dodawanie wydarzenia";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="text-center justify-content-center display-flex" style="min-width:900px;height:85vh">
    <form method="post" class="size100p">
        <input id="team-id" value="@ViewBag.TeamId" disabled hidden />
        <div style="height:50px" class="text-left display-flex mt-16px position-relative">
            <div class="paragraph2-regular ml-8px font-weight-light bring-to-top">
                <a asp-action="orders" class="font-muddy-black">
                    Rozkazy
                </a>
            </div>
            <div class="paragraph2-regular ml-16px font-weight-light bring-to-top">
                <a asp-action="events" class="font-muddy-black">
                    Wydarzenia
                </a>
            </div>
            <div class="position-absolute width100p text-center paragraph2-light font-weight-normal">
                @ViewBag.TeamName
            </div>
        </div>

        <!-- BUTTONS - Add host, ... -->
        <div class="text-left">
            <button asp-action="events" formmethod="get" class="ml-8px mb-16px round-corners-5px no-border text-white large-light" style="background-color:gray">
                <img src="~/icons/navigation/nav-left.svg" class="icon-size-16 mb-4px" style="filter:brightness(1000%)" />
                Wróć
            </button>
        </div>

        <!-- MAIN PANEL -->
        <div class="display-flex size100p justify-content-around">
            <!-- LIST OF HOSTS IN THE TEAM -->
            <div style="height:100%;min-width:160px;width:99%" class="display-flex justify-content-center big-shadow">
                <div style="width:96%">
                    <div class="paragraph2-light mb-16px">
                        Dodawanie wydarzenia
                    </div>
                    @if (ViewBag.additionSucceeded == true)
                    {
                        <div class="font-dark-green mb-8px paragraph-light" style="position:relative">
                            <span class="width100p text-center" style="position:absolute;left:0px;top:-6px">
                                <img src="~/icons/managment/check_circle.svg" class="icon-size-24 mb-4px" style="filter: invert(30%) sepia(11%) saturate(2579%) hue-rotate(70deg) brightness(100%) contrast(84%);" />
                                wydarzenie zostało pomyślnie dodane
                            </span>
                        </div>
                    }
                    @if (ViewBag.additionFailed == true)
                    {
                        <div class="text-danger mb-8px paragraph-light" style="position:relative">
                            <span class="width100p text-center" style="position:absolute;left:0px;top:-6px">
                                <img src="~/icons/managment/cancel.svg" class="icon-size-24 mb-4px" style="filter: invert(47%) sepia(54%) saturate(701%) hue-rotate(314deg) brightness(86%) contrast(98%);" />
                                dodawanie wydarzenia nie powiodło się
                            </span>
                        </div>
                    }
                    <div class="display-flex p-8px" style="position:relative;z-index:1000">
                        <button type="submit" class="mb-16px round-corners-5px no-border text-white large-light" style="background-color:darkgreen">
                            <img src="~/icons/managment/add.svg" class="icon-size-16 mb-4px" style="filter:brightness(1000%)" />
                            Dodaj wydarzenie
                        </button>
                    </div>
                    <div class="display-flex width100p p-4px pl-8px pr-8px justify-content-between">
                        <div class="form-group mr-8px" style="width:49%">
                            <label asp-for="Type" class="width100p text-left">rodzaj*</label> <br />
                            <input asp-for="Type" class="width100p" /><br />
                            <div class="width100p" style="position:relative">
                                @if(ViewBag.additionFailed == true)
                                {
                                    <span class="text-danger" style="position:absolute;left:0px">ta rubryka musi zostać wypełniona</span>
                                }
                            </div>
                        </div>
                        <div class="form-group" style="width:49%">
                            <label asp-for="DateStartDateNotNullDateEnd" class="width100p text-left">data</label> <br />
                            <input type="datetime-local" asp-for="DateStartDateNotNullDateEnd" class="width100p" />
                        </div>
                    </div>
                    <div class="display-flex width100p p-4px pl-8px pr-8px justify-content-between">
                        <div class="form-group mr-8px" style="width:49%">
                            <label asp-for="Description" class="width100p text-left">opis</label> <br />
                            <input asp-for="Description" class="width100p" /><br />
                        </div>
                    </div>
                    <div class="display-flex size-fit-content pl-8px">
                        <label class="input-box-width text-left small-light">* - obowiązkowe</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        $(document).keypress(function (e) {
            var keyCode = (window.event) ? e.which : e.keyCode;
            if (keyCode && keyCode == 13) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}